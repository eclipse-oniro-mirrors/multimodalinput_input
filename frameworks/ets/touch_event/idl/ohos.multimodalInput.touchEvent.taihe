@!namespace("@ohos.multimodalInput.touchEvent")
from ohos.multimodalInput.inputEvent use InputEvent;
@!sts_inject("""
  loadLibrary("TouchEvent.z")
""")

enum Action : i32 {
  CANCEL = 0,
  DOWN = 1,
  MOVE = 2,
  UP = 3
}

enum ToolType : i32 {
  FINGER = 0,
  PEN = 1,
  RUBBER = 2,
  BRUSH = 3,
  PENCIL = 4,
  AIRBRUSH = 5,
  MOUSE = 6,
  LENS = 7
}

enum SourceType : i32 {
  TOUCH_SCREEN = 0,
  PEN = 1,
  TOUCH_PAD = 2
}

enum FixedMode : i32 {
  NONE = 0,
  AUTO = 1
}

struct Touch {
  id: i32;
  pressedTime: i64;
  screenX: i32;
  screenY: i32;
  windowX: i32;
  windowY: i32;
  pressure: f64;
  width: i32;
  height: i32;
  tiltX: i32;
  tiltY: i32;
  toolX: i32;
  toolY: i32;
  toolWidth: i32;
  toolHeight: i32;
  rawX: i32;
  rawY: i32;
  toolType: ToolType;
  fixedDisplayX: Optional<i32>;
  fixedDisplayY: Optional<i32>;
}

struct TouchEvent {
  @extends base:InputEvent;
  action: Action;
  touch: Touch;
  touches: Array<Touch>;
  sourceType: SourceType;
  fixedMode: Optional<FixedMode>;
}