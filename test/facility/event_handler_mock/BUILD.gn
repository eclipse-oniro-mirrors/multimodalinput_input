import("../../../multimodalinput_mini.gni")

config("event_handler_mock_public_config") {
  include_dirs = [
    "include",
    "${mmi_path}/service/module_loader/include",
  ]
}

ohos_source_set("event_handler_mock") {
  branch_protector_ret = "pac_ret"
  sanitize = {
    cfi = true
    cfi_cross_dso = true
    debug = false
  }

  testonly = true

  include_dirs = [
    "include",
    "${mmi_path}/service/connect_manager/include",
  ]

  sources = [
    "src/anr_manager.cpp",
    "src/input_event_handler.cpp",
    "src/key_event_value_transformation.cpp",
  ]

  public_configs = [ ":event_handler_mock_public_config" ]

  deps = [
    "${mmi_path}/test/facility/event_dispatch_mock:event_dispatch_mock",
    "${mmi_path}/test/facility/event_filter_mock:event_filter_mock",
    "${mmi_path}/test/facility/interceptor_mock:event_interceptor_mock",
    "${mmi_path}/test/facility/key_command_mock:key_command_mock",
    "${mmi_path}/test/facility/monitor_mock:event_monitor_mock",
    "${mmi_path}/test/facility/subscriber_mock:subscriber_mock",
    "${mmi_path}/util:libmmi-util",
    "${mmi_path}/frameworks/proxy:libmmi-common",
  ]

  external_deps = [
    "c_utils:utils",
    "googletest:gmock_main",
    "hilog:libhilog",
    "ipc:ipc_single",
  ]

  part_name = "${mmi_part_name}"
  subsystem_name = "${mmi_subsystem_name}"
}
