import("../../../multimodalinput_mini.gni")

config("libinput_interface_sources_public_config") {
  include_dirs = [ "include" ]
}

ohos_source_set("libinput_interface_sources") {
  branch_protector_ret = "pac_ret"
  sanitize = {
    cfi = true
    cfi_cross_dso = true
    debug = false
  }

  include_dirs = [
    "include",
    "$root_out_dir/diff_libinput_mmi/export_include",
  ]

  sources = [ "src/libinput_interface.cpp" ]

  public_configs = [ ":libinput_interface_sources_public_config" ]

  deps = [ "//third_party/libinput/patch:apply_patch" ]

  public_deps = [ "${mmi_path}/libudev:mmi_libudev" ]

  part_name = "${mmi_part_name}"
  subsystem_name = "${mmi_subsystem_name}"
}
